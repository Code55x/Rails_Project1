<div class="container bootstrap snippet">
  <div class="panel-body inf-content">
    <div class="row">
      <div class="col-md-2">
        <img alt="" style="width:600px;" title="" class="img-circle img-thumbnail isTooltip" src="https://bootdey.com/img/Content/user-453533-fdadfd.png" data-original-title="Usuario">
      </div>
      <div class="col-md-6">
        <div class="title-profile-card"><strong>Information</strong></div>
        <div class="table-responsive">
          <table class="table table-condensed table-responsive table-user-information">
            <tbody>
            <tr>
              <td>
                <strong>
                  <span class="glyphicon glyphicon-asterisk text-primary"></span>
                  Identificacion
                </strong>
              </td>
              <td class="text-primary">
                <%= @user.id %>
              </td>
            </tr>
            <tr>
              <td>
                <strong>
                  <span class="glyphicon glyphicon-user  text-primary"></span>
                  Name
                </strong>
              </td>
              <td class="text-primary">
                <%= @user.name %>
              </td>
            </tr>
            <tr>
              <td>
                <strong>
                  <span class="glyphicon glyphicon-cloud text-primary"></span>
                  Role
                </strong>
              </td>
              <td class="text-primary">
                <%= @user.role %>
              </td>
            </tr>

            <tr>
              <td>
                <strong>
                  <span class="glyphicon glyphicon-bookmark text-primary"></span>
                  Email
                </strong>
              </td>
              <td class="text-primary">
                <%= @user.email %>
              </td>
            </tr>


            <tr>
              <td>
                <strong>
                  <span class="glyphicon glyphicon-eye-open text-primary"></span>
                  Address
                </strong>
              </td>
              <td class="text-primary">
                <%= @user.address %>
              </td>
            </tr>
            <tr>
              <td>
                <strong>
                  <span class="glyphicon glyphicon-envelope text-primary"></span>
                  Website
                </strong>
              </td>
              <td class="text-primary">
                <%= @user.website %>
              </td>
            </tr>
            <tr>
              <td>
                <strong>
                  <span class="glyphicon glyphicon-calendar text-primary"></span>
                  Phone Number
                </strong>
              </td>
              <td class="text-primary">
                <%= @user.phoneNumber %>
              </td>
            </tr>
            <tr>
              <td>
                <strong>
                  <span class="glyphicon glyphicon-calendar text-primary"></span>
                  Description
                </strong>
              </td>
              <td class="text-primary">
                <%= @user.description %>
              </td>
            </tr>
            <tr>
              <td>
                <strong>
                  <span class="glyphicon glyphicon-calendar text-primary"></span>
                  Time created
                </strong>
              </td>
              <td class="text-primary">
                <%= @user.created_at %>
              </td>
            </tr>
            </tbody>
          </table>
        </div>
      </div>
      <div class="col-md-4">
        <% if @user.role == "Company" %>
          <div><strong> Your Places</strong></div>
          <% @user.places.each do |f| %>
            <!--          temp version, change when done with places-->
            <%= link_to "#{f.name}", place_path(f.id) %><br>
          <% end %>
          </div>
        <% end %>
        </div>
  </div>
</div>